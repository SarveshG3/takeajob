        android:id="@+id/profile_image"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_marginTop="20dp"

        android:src="@drawable/default_profile"
        app:civ_border_width="1dp"
        app:civ_border_color="#FF000000"/>

